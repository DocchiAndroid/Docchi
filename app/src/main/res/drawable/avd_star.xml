<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="star"
                android:pathData="M 12 0.587 L 15.668 8.155 L 24 9.306 L 17.936 15.134 L 19.416 23.413 L 12 19.446 L 4.583 23.413 L 6.064 15.134 L 0 9.306 L 8.332 8.155 Z"
                android:fillColor="#fff000"
                android:strokeWidth="1"
                android:trimPathEnd="0"/>
        </vector>
    </aapt:attr>
    <target android:name="vector">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="alpha"
                android:duration="500"
                android:valueFrom="1"
                android:valueTo="0.1"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
    <target android:name="star">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:duration="500"
                android:valueFrom="1"
                android:valueTo="0"
                android:valueType="floatType"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>
</animated-vector>
