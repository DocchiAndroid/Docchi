<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/gradient">


    <LinearLayout
        android:id="@+id/layoutLoginName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutLoginEditText"
        android:orientation="vertical">

<!--        <pl.droidsonroids.gif.GifImageView-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"-->

<!--            />-->


        <EditText
            android:id="@+id/etLoginUsername"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:autofillHints=""
            android:background="@drawable/et_rounded"
            android:backgroundTint="#4BFFFFFF"
            android:drawableLeft="@drawable/ic_outline_email_24"
            android:drawablePadding="15dp"
            android:drawableTint="#FFFFFF"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:text="Email Address" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutLoginEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:autofillHints=""
            android:background="@drawable/et_rounded"
            android:backgroundTint="#4DFFFFFF"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            tools:text="Password" />
    </LinearLayout>


    <TextView
        android:id="@+id/btnSignUpLoginAct"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded"
        android:gravity="center"
        android:text="@string/signUp"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutLoginEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:background="@drawable/btn_rounded"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="20sp" />


