<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".fragments.CreatePostFragment">

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnCaptureImageCreatePost"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#27FFFFFF"
            android:src="@drawable/ic_baseline_photo_camera_24" />

        <ImageButton
            android:id="@+id/btnSelectImageCreatePost"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#27FFFFFF"
            android:src="@android:drawable/ic_menu_gallery" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayoutCreatePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLayout"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPostImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:src="@tools:sample/avatars" />
    </LinearLayout>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnSubmit"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:backgroundTint="#4BFFFFFF"
        android:drawablePadding="15dp"
        android:drawableTint="#FFFFFF"
        android:ems="10"
        android:hint="Description"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <ProgressBar
        android:id="@+id/pbProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/btnSubmit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rounded"
        android:clickable="true"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>