<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/choosePostType"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="40dp"
    android:paddingLeft="20dp"
    android:paddingRight="40dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/item_background_rounded">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/dialog_toolbar"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:background="@drawable/item_background_rounded"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="New Post"
        android:gravity="left"
        app:titleTextColor="@color/blue">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:src="@drawable/ic_close" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/poll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/white"
        android:text="Add Images to the Poll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@drawable/ic_camera_24"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/dialog_toolbar" />

    <Button
        android:id="@+id/pollWithoutPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue without Images"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableLeft="@drawable/ic_poll"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/poll" />

</androidx.constraintlayout.widget.ConstraintLayout>