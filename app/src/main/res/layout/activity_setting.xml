<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".SettingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/customtoolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/ivUsername"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_username_settings"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/tvChangeUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Change Username" />

    </LinearLayout>


    <EditText
        android:id="@+id/etCurrentUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/et_settings"
        android:padding="10dp"
        android:hint="Enter Current Username"
        />

    <EditText
        android:id="@+id/etNewUsername"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/et_settings"
        android:padding="10dp"
        android:hint="Enter New Username"
        />

    <Button
        android:id="@+id/btnUpdateUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Username"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/ivPassword"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_password_settings"
            android:layout_marginTop="70dp"
            />


        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:text="Change Password" />

    </LinearLayout>


    <EditText
        android:id="@+id/etCurrentPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/et_settings"
        android:padding="10dp"
        android:inputType="textPassword"
        android:hint="Enter Password"
        />

    <EditText
        android:id="@+id/etNewPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/et_settings"
        android:inputType="textPassword"
        android:padding="10dp"
        android:hint="Confirm Password"
        />

    <Button
        android:id="@+id/btnUpdatePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>