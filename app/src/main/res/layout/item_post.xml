<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivProfilePicture"
        android:layout_marginStart="10dp"
        tools:text="Smita Mujumdar"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfilePicture"
        tools:text="Do you like me or this insect?"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        />


    <LinearLayout
        android:id="@+id/pictureContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvDescription"
        >

        <ImageView
            android:id="@+id/ivImage1"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/ivImage2"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </LinearLayout>


    <ImageView
        android:id="@+id/ivLike1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/pictureContainer"
        android:src="@drawable/ic_baseline_thumb_up_24"
        />

    <ImageView
        android:id="@+id/ivLike2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/pictureContainer"
        android:src="@drawable/ic_baseline_thumb_up_24"
        />

    <TextView
        android:id="@+id/tvCount1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLike1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="200" />

    <TextView
        android:id="@+id/tvCount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLike2"
        android:layout_marginStart="250dp"
        android:layout_marginTop="20dp"
        android:textColor="#E91E63"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="100" />

</RelativeLayout>