<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.Docchi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->

    <item name="colorPrimary">#00B4D8</item>
    <item name="colorPrimaryVariant">@color/blue_dark</item>
    <item name="colorOnPrimary">#656161</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/white</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>

  </style>
  <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowBackground">@drawable/splash_screen</item>
  </style>
</resources>